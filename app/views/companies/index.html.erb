<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity</th>
      <th>Contact</th>
      <th>Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Web</th>
      <th>Status</th>
      <th>Member</th>
      <th>Event</th>
      <th>Allowed</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.activity %></td>
        <td><%= company.contact %></td>
        <td><%= company.number %></td>
        <td><%= company.email %></td>
        <td><%= company.address %></td>
        <td><%= company.web %></td>
        <td><%= company.status %></td>
        <td><%= company.member %></td>
        <td><%= company.event %></td>
        <td><%= company.allowed %></td>
        <td><%= company.note %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

